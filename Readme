az group create --name MLResourceGroup --location eastus

az vm create \
  --resource-group MLResourceGroup \
  --name MLVM \
  --image UbuntuLTS \
  --admin-username azureuser \
  --generate-ssh-keys


az vm open-port --port 80 --resource-group MLResourceGroup --name MLVM


ssh username@hostname

